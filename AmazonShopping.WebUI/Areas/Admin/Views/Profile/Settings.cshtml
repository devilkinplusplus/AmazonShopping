<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="col-md-8">
                        <h2 class="lead">Change your information</h2>
                        <div class="form-three widget-shadow">
                            <div class="panel-body-inputin">
                                <form class="form-horizontal" id="editForm" method="post">

                                    <div class="form-group">
                                        <label class="col-md-2 control-label">First Name</label>
                                        <div class="col-md-8">
                                            <div class="input-group">
                                                <span class="input-group-addon">
                                                    <i class="fa fa-user"></i>
                                                </span>
                                                <input type="text" class="form-control1"
                                                       placeholder="Your Name"
                                                       name="FirstName">
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-2 control-label">Last Name</label>
                                        <div class="col-md-8">
                                            <div class="input-group">
                                                <span class="input-group-addon">
                                                    <i class="fa fa-user"></i>
                                                </span>
                                                <input type="text" class="form-control1"
                                                       placeholder="Your Lastname"
                                                       name="LastName">
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-2 control-label">Password</label>
                                        <div class="col-md-8">
                                            <div class="input-group">
                                                <span class="input-group-addon">
                                                    <i class="fa fa-key"></i>
                                                </span>
                                                <input type="password" class="form-control1"
                                                       placeholder="Your Password"
                                                       name="Password">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-2"></div>
                                        <div class="col-md-8">
                                            <input type="submit" class="btn btn-primary"
                                                   onclick="Submit(event)" value="Submit" />
                                        </div>
                                    </div>

                                </form>

                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




@section Scripts{
    <script>
        function Submit(e) {
            e.preventDefault();
            var dataForm = $("#editForm").serializeArray();
            const dataObj = {};
            $(dataForm).each(function (i, field) {
                dataObj[field.name] = field.value;
            })
            $.ajax({
                url: "/Admin/Profile/EditUser",
                type: "POST",
                data: dataObj,
                contentType: "application/x-www-form-urlencoded; charset=UTF-8",
                dataType: "json",
                success: function (res) {
                    if (res != null) {
                        Swal.fire(
                            'Updated successfully!',
                            '',
                            'success'
                        )
                    }
                    else{
                        Swal.fire("Something went wrong","","warning")
                    }
                }
            })
        }



    </script>
}