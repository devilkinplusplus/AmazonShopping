@model IDataResult<IEnumerable<Product>>

<div class="main-page">
    <div class="tables">
        <h2 class="title1">Tables</h2>
        <div class="table-responsive bs-example widget-shadow">
            <h4>Product List:</h4>
            @if (Model.Data.Count() != 0)
            {
                <table class="table table-bordered table-hover table-striped">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Category</th>
                            <th>Catalog</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model.Data)
                        {
                            <tr>
                                <td>@item.Title</td>
                                <td>@item.Category.Name</td>
                                <td>@item.Catalog.Name</td>
                                <td>
                                    <a href="/admin/product/edit/@item.Id"
                                       class="btn btn-warning btn-sm">Edit</a>
                                </td>
                                <td>
                                    <a href="/admin/product/delete/@item.Id"
                                       onclick="return confirm('Are you sure?')"
                                       class="btn btn-danger btn-sm">Delete</a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            }
            else
            {
                <div class="container">
                    <h2 class="lead">No item found !</h2>
                </div>
            }
        </div>
        <br />
        <div class="mt-2">
            <a href="/admin/product/create" class="btn btn-success">New Product</a>
        </div>
    </div>
</div>
