                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts{
    <script>
        function Submit() {
            var data = $('form').serializeArray();
            var dataObj = {};
            $(data).each(function (i, field) {
                dataObj[field.name] = field.value;
            })

            $.ajax({
                url: "/Contact/SendFeedBack",
                type: "POST",
                data: dataObj,
                success: function (res) {
                    if (res != null) {
                        Swal.fire(
                            'Sent Successfully!',
                            '',
                            'success'
                        )
                    }
                }
            }).done(function (res) {
                console.log(res)
            })

        }

    </script>

}