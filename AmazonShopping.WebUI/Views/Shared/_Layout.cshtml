    <!-- owl carousel CSS -->
    <link rel="stylesheet" href="~/eTemplate/css/owl.carousel.min.css">
    <!-- Slick Carousel CSS -->
    <link rel="stylesheet" href="~/eTemplate/css/slick.css">
    <!-- Animate CSS -->
    <link rel="stylesheet" href="~/eTemplate/css/animate.css">
